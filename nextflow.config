/*
Nextflow configuration file for SNPmatch on GMI Mendel

please edit config file if you want to implement to another cluster

*/
params {

  max_memory = 250.GB
  max_cpus = 24
  max_time = 48.h
  version = '2.2.0' // Pipeline version
  nf_required_version = '0.31.1' // Minimum version of nextflow required

}

executor {
  $pbs {
    name = 'pbs'
    queueSize = 1000
  }
}

process {

  executor = 'pbs'
  clusterOptions = { "-P $params.project " }

  errorStrategy = { task.exitStatus in [143,137] ? 'retry' : 'terminate' }
  maxRetries = 3
  maxErrors = '-1'

  withLabel: env_rcsv {
    cpus = 1
    memory = 10.GB
    time = 3.h
    module = ['R-bundle-Bioconductor/3.2-foss-2016a-R-3.2.3']
  }

  withLabel: env_snpmatch {
    cpus = 1
    memory = 10.GB
    time = 5.h
    module = ['snpmatch/2.5.0-foss-2017a-Python-2.7.13', 'hmmlearn/0.2.1-foss-2017a-Python-2.7.13']
  }

  withLabel: env_bshap {
    cpus = 1
    memory = 10.GB
    time = 5.h
    module = ['snpmatch/2.5.0-foss-2017a-Python-2.7.13', 'pyBsHap/1.1.0-foss-2017a-Python-2.7.13']
  }
}
